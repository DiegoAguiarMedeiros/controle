<script>
    const loadProduto = () => {
        $('#produtoTable').html(`<tr><td colspan='6'><center><div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
                </div></center></td></tr>`)

        let url = 'http://' + window.location.host + '/api/produtos';
        $.ajax({
            url: url,
            type: 'GET',
            dataType: "json"
        }).fail((dados) => {
            $('#produtoTable').html(`<tr><td colspan='6'>ERROR</td></tr>`)

        }).done((dados) => {
            $('#produtoTable').html('')

            dados.map(produto => {
                $('#produtoTable').prepend(`<tr>
                            <td>
                                ${produto.nome}
                            </td>
                            <td>
                            ${produto.id_medida}
                            </td>
                            <td>
                            ${produto.quantidade}
                            </td>
                            <td>
                            R$ ${produto.valor}
                            </td>
                            <td>
                            ${produto.id_fornecedor}
                            </td>
                            <td>
                            ${produto.id_categoria}
                            </td>
                        </tr>`)
            })

        })

    }


    $(document).ready(() => {
        loadProduto()
    })
</script>
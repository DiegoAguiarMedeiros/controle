<script>
    var myModal = new bootstrap.Modal(document.getElementById('produtoModal'), {
        keyboard: false
    })
    const loadProduto = () => {
        $('#produtoTable').html(`<tr><td colspan='6'><center><div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
                </div></center></td></tr>`)

        let url = '/api/produtos';
        $.ajax({
            url: url,
            type: 'GET',
            dataType: "json"
        }).fail((dados) => {
            $('#produtoTable').html(`<tr><td colspan='6'>ERROR</td></tr>`)

        }).done((dados) => {
            $('#produtoTable').html('')

            dados.map(produto => {
                $('#produtoTable').prepend(`<tr>
                            <td>
                                ${produto.nome}
                            </td>
                            <td>
                            ${produto.id_medida}
                            </td>
                            <td>
                            ${produto.quantidade}
                            </td>
                            <td>
                            R$ ${produto.valor}
                            </td>
                            <td>
                            ${produto.id_fornecedor}
                            </td>
                            <td>
                            ${produto.id_categoria}
                            </td>
                        </tr>`)
            })

        })

    }

    $('#produtoForm').submit(e => {
        e.preventDefault()
        let form = document.getElementById('produtoForm')
        let formData = new FormData(form)
        let url = '/api/insertProduto';
        $.ajax({
            url: url,
            type: "POST",
            data: formData,
            processData: false,
            contentType: false,
        }).done(function(e) {
            let result = JSON.parse(e)
            if (result.success == 1) {
                $('#produtoForm input').val("");
                $('#enviar').val("Enviar");
                Swal.fire(
                    'Eeeeee!',
                    'Produto Cadastrado!',
                    'success'
                )
                myModal.hide()
            } else {
                Swal.fire(
                    'Aaaa!',
                    'Produto N√£o Cadastrado!',
                    'error'
                )
            }

            loadProduto()
        }).fail(function(e) {
            console.log(e);
        });

    })
    $('#categoriaForm').submit(e => {
        e.preventDefault()
        let form = document.getElementById('categoriaForm')
